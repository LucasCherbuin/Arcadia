{% extends 'headerFooter.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/styles/headerFooter.css">
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script crossorigin src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jersey+10&display=swap" rel="stylesheet">
{% endblock %}

{% for avis in avis_list %}
<link rel="stylesheet" href="{{ asset('assets/styles/avisValidation') }}">
<div class="card mb-3" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Pseudo</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{ avis.pseudo }}</h6>
        <p class="card-text">{{ avis.description }}</p>
        <div class="card-buttons">
            <button type="button" class="btn btn-success me-2">
                <i class="ph-check-circle"></i> Valider
            </button>
            <button type="button" class="btn btn-danger" >
                <i class="ph-x-circle"></i> Refuser
            </button>
        </div>
    </div>
</div>
{% endfor %}
