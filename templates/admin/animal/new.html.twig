{% extends 'headerFooter.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/styles/headerFooter.css">
    <link rel="stylesheet" href="/styles/Form.css">
    <link rel="stylesheet" href="/styles/globalFont.css">
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jersey+10&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
{% endblock %}

{% block body %}
{{ form_start(form) }}

        <form method="POST" enctype="multipart/form-data">
            <!-- Champ prÃ©nom (Animal) -->
            <div class="form-floating mb-3">
                {{ form_row(form.prenom) }}
            </div>

            <!-- Champ race (Animal) -->
            <div class="form-floating mb-3">
                {{ form_row(form.race) }}
            </div>

            <!-- Champ nouvelle race (si applicable) -->
            <div class="form-floating mb-3">
                {{ form_row(form.nouvelleRace) }}
            </div>

            <!-- Champ habitat -->
            <div class="form-floating mb-3">
                {{ form_row(form.habitat) }}
            </div>

            <!-- Champ image de l'animal -->
            <div class="form-floating mb-3">
                {{ form_row(form.image) }}
            </div>

            <button type="submit" class="btn btn-primary w-100">Envoyer</button>
            <a href="{{ path('app_utilisateur_index') }}" class="btn btn-secondary">Retour</a>
        </form>
    </div>
    {{ form_end(form) }}
</div>


<!-- Messages flash -->
{% for message in app.flashes('success') %}
    <div class="alert alert-success mt-3">{{ message }}</div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="alert alert-danger mt-3">{{ message }}</div>
{% endfor %}
{% endblock %}
