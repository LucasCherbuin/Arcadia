{% extends 'headerFooter.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/styles/headerFooter.css">
    <link rel="stylesheet" href="/styles/tableau.css">
    <link rel="stylesheet" href="/styles/globalFont.css">
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="w-100" style="max-width: 800px;">
        <!-- Tableau combiné pour les animaux et les employés -->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nom de l'animal</th>
                        <th>Race</th>
                        <th>Habitat</th>
                        <th>Employé.e</th>
                        <th>Nourriture</th>
                        <th>Quantité en gramme</th>
                        <th>Date et heure</th>
                    </tr>
                </thead>
                <tbody>
                    {% for animal in preparedAnimal %}
                        <tr>
                            <td>{{ animal.prenom }}</td>
                            <td>{{ animal.race }}</td>
                            <td>{{ animal.habitat }}</td>
                            <td>
                                {% for employee in animal.employees %}
                                    <p>{{ employee.email }}</p>
                                {% endfor %}
                            </td>
                            <td>
                                {% for employee in animal.employees %}
                                    <p>{{ employee.nourriture }}</p>
                                {% endfor %}
                            </td>
                            <td>
                                {% for employee in animal.employees %}
                                    <p>{{ employee.quantité }}</p>
                                {% endfor %}
                            </td>
                            <td>
                                {% for employee in animal.employees %}
                                    <p>{{ employee.date }}</p>
                                {% endfor %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
</div>
{% endblock %}
